<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/side_padding"
    android:layout_marginRight="@dimen/side_padding"
    android:layout_marginTop="@dimen/top_padding"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/login_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_description_text" />

    <Button
        android:id="@+id/oauth_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="loginClick"
        android:text="Change Login" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toastCredentials"
        android:text="Toast" />

</LinearLayout>